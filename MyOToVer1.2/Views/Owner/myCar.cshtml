@{
    ViewData["Title"] = "MyCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- layout mycar -->
<div class="myCar">
    <h1 class="myCar__header">DANH SÁCH XE</h1>
    <div class="list__rental" style="height: auto;">
        @foreach(var item in ViewBag.Car)
        {
            <li class="item__rental">
                <div href="" class="link__rental">
                    <img src="/img/huyndai4cho.png" alt="" class="img__rental">
                    <div class="rental__container">
                        <h3 class="header">@item.car_name @item.car_brand @item.car_model_year @item.car_capacity chỗ </h3>
                        <div class="body">
                            <div class="body__left">
                                <p class="total__rented">Tổng số chuyển đã cho thê: <span>@item.car_number_rented</span></p>
                            </div>
                            <div class="body__right">
                                <button class="edit__Btn edit__infor active">Sửa thông tin</button>
                                @if(item.car_status == true)
                                {
                                    <button class="edit__Btn edit__pause active">Tạm dừng cho thuê</button>
                                }
                                else
                                {
                                    <button class="edit__Btn edit__pause active">Kích hoạt cho thuê</button>
                                }

                               
                            </div>
                        </div>
                    </div>
                </div>
            </li>

           int check = 0;

            <div class="toasts">
                <div id="toast">
                    <div class="toast toast__warning">
                        <div class="toast__icon">
                            <i class="fas fa-circle-exclamation"></i>
                        </div>
                        <form method="post">
                        <div class="toast__body">
                            <h3 class="toast__title">Cảnh báo</h3>
                            <p class="toast__msg" style="margin-top: 10px;">
                                Xe <span>@item.car_brand @item.car_name</span> sẽ được khóa khi bạn xác nhận.
                            </p>
                            <p class="toast__msg">Lưu ý: Khi xác nhận tạm dừng cho thuê, xe của bạn sẽ không còn xuất hiện trên danh sách tìm kiếm của chúng tôi.</p>
                            @{
                               check = 1;
                            }
                            <input type="hidden" name="check" value="@check">
                            <input type="hidden" name="carid" value="@item.car_id">
                            <button class="toast-btn" asp-controller="Owner" asp-action="MyCar">Xác nhận</button>
                        </div>
                        </form>
                        <div class="toast__close">
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class=" toasts__reActive">
                <div id="toast__reActive">
                    <div class="toast toast__warning">
                        <div class="toast__icon">
                            <i class="fas fa-circle-exclamation"></i>
                        </div>
                        <form  method="post">
                        <div class="toast__body">
                            <h3 class="toast__title">Cảnh báo</h3>
                            <p class="toast__msg" style="margin-top: 10px;">
                                Xe <span>@item.car_brand @item.car_name</span> sẽ tắt chế độ tạm dừng cho thuê khi bạn xác nhận.
                            </p>
                            <p class="toast__msg">Lưu ý: Khi xác nhận kích hoạt cho thuê, xe của bạn sẽ xuất hiện trên danh sách tìm kiếm của chúng tôi.</p>
                             @{
                                check = 2;
                            }
                            <input type="hidden" name="check"  value="@check">
                            <input type="hidden" name="carid" value="@item.car_id">
                            <button class="toastReActive-btn" asp-controller="Owner" asp-action="MyCar">Xác nhận</button>

                        </div>
                        </form>
                        <div class="toastReActive__close">
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                    </div>
                </div>
            </div>  
        }

        <div class="modals modal-edit">
            @foreach (var item in ViewBag.Car)
            {
                <div class="modal modal__myCar">
                    <div class="modal__container">
                        <div class="modal__close myCar__close">
                            <i class="fa-regular fa-circle-xmark"></i>
                        </div>
                        <div class="modal__body myCar__body grid">
