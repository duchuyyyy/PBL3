
@{
    ViewData["Title"] = "ReviewContent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="evaluate disable">
        <h1 style="margin-bottom: 18px ;">Đánh giá trải nghiệm của bạn về dịch vụ</h1>
        <div class="stars">
            <input type="radio" id="star5" name="rating" value="5">
            <label for="star5"></label>
            <input type="radio" id="star4" name="rating" value="4">
            <label for="star4"></label>
            <input type="radio" id="star3" name="rating" value="3">
            <label for="star3"></label>
            <input type="radio" id="star2" name="rating" value="2">
            <label for="star2"></label>
            <input type="radio" id="star1" name="rating" value="1">
            <label for="star1"></label>
        </div>
        <div class="comment">
            <label for="comment">Bình luận về dịch vụ: </label><br>
            <textarea style="width: 80%;" id="comment" name="comment"></textarea>
        </div>
        <div class="submit-btn">
            <button class="evaluate__btn">Gửi đánh giá</button>
        </div>
    </div>

